{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    // "outFile": "../../built/local/tsc.js",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
