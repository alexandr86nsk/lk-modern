{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@models/*": ["./src/models/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/store/*"],
      "@constants/*": ["./src/constants/*"],
      "@services/*": ["./src/services/*"],
      "@mocks/*": ["./src/__mocks__/*"],
      "@styles-kit/*": ["./src/styles-kit/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src/index.tsx",
    "@types/*",
    "src/types/*"
  ]
}